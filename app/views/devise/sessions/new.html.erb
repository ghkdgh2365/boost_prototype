<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label:"이메일 주소", required: false, autofocus: true %>
    <%= f.input :password, label:"비밀번호", required: false %>
    <%= f.input :remember_me, label:"로그인 저장", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "로그인" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
