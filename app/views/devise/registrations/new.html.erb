<h2>회원가입</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label:"이메일 주소", required: true, autofocus: true %>
    <%= f.input :password, label:"비밀번호", required: true, hint: ("#{@minimum_password_length} 글자 이상으로 해주세요" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label:"비밀번호 확인", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "회원가입" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
